global
    daemon
    maxconn 50000
    stats socket /var/lib/haproxy/haproxy.sock mode 0600 level admin
defaults
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend front_in
    bind {{ haproxy_bind_address }}:80
    ##  SSL binding ##
    # bind {{ haproxy_bind_address }}:443 ssl crt /etc/ssl/certs/server.pem
    maxconn 30000
    default_backend ju_backend

backend ju_backend
    mode http 
    ##  Force SSL ##
    # redirect scheme https if !{ ssl_fc }
    balance roundrobin
{% for balancing_server in haproxy_balancing_servers %}
    server {{ balancing_server.name }} {{ balancing_server.ip }}:8080 maxconn 30000 check inter 2000 rise 2 fall 5
{% endfor %}
    option forwardfor

#listen stats :8181        
#   mode http
#   stats enable
#   stats realm Haproxy\ Statistics
#   stats uri /
#   stats auth haproxy:ju

listen Galera
    bind *:3306
    balance source
    mode tcp
    option tcpka
    option mysql-check user haproxy
{% for galera_servers in galera_servers %}
    server {{ galera_servers.name }} {{ galera_servers.ip }}:3306 check weight 1
{% endfor %}

